{
  "name": "susy",
  "version": "3.0.0",
  "description": "Sass power-tools for web layout.",
  "author": "E. Miriam Suzanne <miriam@oddbird.net>",
  "main": "sass/_susy.scss",
  "repository": {
    "type": "git",
    "url": "git://github.com/ericam/susy.git"
  },
  "devDependencies": {
    "mocha": "2.2.5",
    "sass-true": "2.0.2"
  },
  "keywords": [
    "layout",
    "grid",
    "sass",
    "responsive",
    "rwd",
    "semantic",
    "eyeglass-module"
  ],
  "eyeglass": {
    "exports": "eyeglass-exports.js"
  },
  "scripts": {
    "test": "npm run --silent test-libsass && npm run --silent test-ruby",
    "test-libsass": "node_modules/.bin/mocha",
    "test-ruby": "rake test",
    "benchmark": "cd test && ./benchmark.sh",
    "lint": "scss-lint sass && scss-lint test/scss",
    "lint-staged": "git diff --cached --diff-filter=ACMRTUXB --pretty='format:' --name-only | grep -E .scss$ | xargs scss-lint --config .scss-lint.yml",
    "pre-commit": "npm run --silent test && npm run --silent lint"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/ericam/susy/issues"
  }
}
